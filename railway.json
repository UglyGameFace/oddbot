{
  "//": "railway.json - ENTERPRISE DEPLOYMENT CONFIGURATION FOR RAILWAY (aligned to app endpoints)",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "npm ci --omit=dev || npm install --omit=dev"
  },
  "deploy": {
    "startCommand": "npm start",
    "healthcheckPath": "/health/readiness",
    "healthcheckTimeout": 60,
    "restartPolicy": {
      "type": "on-failure",
      "maximumRetryCount": 3
    }
  },
  "environment": {
    "NODE_ENV": "production",
    "LOG_LEVEL": "info"
  },
  "checks": {
    "liveness": {
      "path": "/health/liveness",
      "interval": 30,
      "timeout": 10,
      "initialDelay": 15
    },
    "readiness": {
      "path": "/health/readiness",
      "interval": 30,
      "timeout": 10,
      "initialDelay": 20
    }
  }
}
